<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zhengjin.funsettingsuitest.activity.ActivityRunUiTest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_inst_test_method" />

        <EditText
            android:id="@+id/editor_inst_test_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/editor_inst_test_method_hint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_exec_time" />

        <EditText
            android:id="@+id/editor_exec_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/editor_exec_time_hint" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_inst_tests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_run_inst_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_run_inst_test" />

    <TextView
        android:id="@+id/text_inst_run_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
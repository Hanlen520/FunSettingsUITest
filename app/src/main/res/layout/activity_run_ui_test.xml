<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_inst_test_method" />

        <EditText
            android:id="@+id/editor_inst_test_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/editor_inst_test_method_hint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_exec_time" />

        <EditText
            android:id="@+id/editor_exec_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/editor_exec_time_hint" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_inst_tests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_run_inst_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_run_inst_test" />

</LinearLayout>